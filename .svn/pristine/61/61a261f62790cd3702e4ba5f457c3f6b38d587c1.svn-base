<script>
import { mapGetters, mapActions } from 'vuex'
import DataTableVue4 from '@/components/DataTableVue4'
import pageHeader from '@/mixin/pageHeader'

const shopStore = 'shopStore'
export default {
  name: 'baseShopList',
