          this.rows = res
        })
        .catch(err => {
          console.log(err)
        })
    },
    selectFcGroup (e) {
      console.log('event', e.target.value)
    },
    searchBtn () {
      let params = {pfranchiseeName: this.searchParam.pfranchiseeName, pfranchiseeGroup: this.searchParam.pfranchiseeGroup}
      this.actionFindShopList(params)
        .then(res => {
          this.rows = res
        })
        .catch(err => {
          console.log(err)
        })
    },
    ...mapActions(shopStore, [
      'actionFindShopList',
      'actionSaveVendor'
    ])
  }
}
